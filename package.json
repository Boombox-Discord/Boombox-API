{
  "name": "boombox-api",
  "version": "0.0.1",
  "description": "An API for interacting with the Discord Bot Boombox",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "npm run swagger && npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/src/index.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "test": "jest",
    "swagger": "tsoa spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Boombox-Discord/Boombox-API.git"
  },
  "author": "Boombox-Dev",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Boombox-Discord/Boombox-API/issues"
  },
  "homepage": "https://github.com/Boombox-Discord/Boombox-API#readme",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.6.1",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^27.0.4",
    "tsoa": "^3.9.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.15",
    "@types/jest": "^27.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^6.2.1",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ]
  }
}
